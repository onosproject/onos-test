 Reads the standard input for CLI command output from 'onos e2sub list endpoints'
 and checks that the output is correct.
"""

import sys
import check_cli
import time

expected_headers = ['ID', 'IP', 'Port']

ID_REGEX = r'onos-e2t-[0-9a-z]{10}-[0-9a-z]{5}'
IP_REGEX = r'[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}$'
PORT_REGEX = r'[0-9]*'

expected_regexes = [
    ID_REGEX,
    IP_REGEX,
    PORT_REGEX,
]

if __name__ == '__main__':
    ok = check_cli.check_cli_output('E2Sub endpoints', expected_headers, expected_regexes)

    if not ok:
        exit(1)

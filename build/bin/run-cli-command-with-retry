 Checks that the KPIMON CLI and the UENIB CLI return the same values for
 the average number of UEs
"""

import subprocess
import sys
import time

if __name__ == '__main__':
    failure = int(1)
    success = int(0)

    kubectl_command = 'kubectl run onos-cli -n micro-onos --quiet'
    base_cli_command = kubectl_command + ' --rm -it --image onosproject/onos-cli:latest --restart "Never" --command -- onos '

    cli_command = base_cli_command
    for arg in sys.argv[1:]:
        cli_command = cli_command + " " + arg

    print ("Eecuting command: " + cli_command)
    # capture CLI output from KPIMON and UENIB
    cli_output = ""
    max_attempts = int(5)
    while cli_output == "":
        try:
            cli_output = subprocess.check_output(args=cli_command, shell=True).decode("utf-8")
            break
        except subprocess.CalledProcessError:
            cli_output = ""

        max_attempts -= 1
        if max_attempts == 0:
            break
        time.sleep(2)

    print("CLI output:\n" + cli_output)

    if cli_output == "":
        exit(failure)
    exit(success)

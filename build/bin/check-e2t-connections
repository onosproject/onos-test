 Reads the standard input for CLI command output from 'onos e2t list connections'
 and checks that the output is correct.
"""

import sys
import time
import check_cli

expected_headers = ['Global', 'ID', 'PLNM', 'ID', 'IP', 'Addr', 'Port', 'Conn', 'Type']

GLOBAL_ID_REGEX = r'[0-9a-f]{16}:[0]'
PLMN_ID_REGEX = r'[0-9]*'
IP_ADDR_REGEX = r'[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}$'
PORT_REGEX = r'[0-9]*'
CONN_TYPE_REGEX = r'G_NB'

expected_regexes = [
    GLOBAL_ID_REGEX,
    PLMN_ID_REGEX,
    IP_ADDR_REGEX,
    PORT_REGEX,
    CONN_TYPE_REGEX
]

if __name__ == '__main__':
    ok = check_cli.check_cli_output('E2T connections', expected_headers, expected_regexes)

    if not ok:
        exit(1)

 Reads the standard input for CLI command output from 'onos e2sub list endpoints'
 and checks that the output is correct.
"""

import check_cli, re

expected_headers = ['Entity', 'ID', 'Kind', 'ID', 'Labels', 'Aspects']

ENTITY_ID_REGEX = r'^e2:([a-zA-Z0-9-]+|1(\/[a-z0-9]+)+)$'
KIND_ID_REGEX = r'^e2node|e2cell|e2t$'
NONE_REGEX = r'^<None>$'
ASPECTS_REGEX = r'^[0-9a-zA-Z-,\.]+|<None>$'

expected_regexes = [
    ENTITY_ID_REGEX,
    KIND_ID_REGEX,
    NONE_REGEX,
    ASPECTS_REGEX,
]
error = int(1)


if __name__ == '__main__':
    check = 'E2T connections'
    ok,output = check_cli.check_cli_output(check, expected_headers, expected_regexes)

    if not ok:
        print ("Check " + check + " failed")
        exit(1)

    e2t_count = int(0)
    for line in output:
        tokens = line.split()
        print(tokens[0])
        if re.fullmatch(r'^e2:onos-e2t-.*$', tokens[0]):
            e2t_count += 1

    if e2t_count != 1:
        print("Wrong number of e2t instances found: ", str(e2t_count))
        exit(error)

    print ("Check " + check + " passed")

#!/bin/bash

# Script to build and run all of the onos integration tests

set -e

if [ -z $1 ]
then
  testSuite="*** Unknown Test Suite ***"
elif [ -n $1 ]
then
# otherwise make first arg as a rental
  testSuite=$1
fi

case "$testSuite" in
"onos-topo")
     # onos-topo
     pushd ..
     git clone https://github.com/onosproject/onos-topo.git
     cd onos-topo
     make kind
     onit test --image onosproject/onos-topo-tests:latest
     popd;;

"onos-config")
    # onos-config
    pushd ..
    git clone https://github.com/onosproject/onos-config.git
    cd onos-config
    make kind
    onit test --image onosproject/onos-config-tests:latest
    popd;;
*) echo "You have failed to specify test suite."
    exit 1
    ;;
esac
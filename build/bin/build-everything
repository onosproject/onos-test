# Script to do a dry run build of all the micro onos components


set -e -u -o pipefail

cd ..
mkdir ./build-work-space
cd ./build-work-space

# pull master branches of included components
for component in build-tools onos-lib-go helmit onos-topo ran-simulator config-models onos-config onos-cli onos-helm-charts onos-docs onos-gui gnxi-simulators sdran-helm-charts onos-e2sub onos-e2t onos-ric-sdk-go
do
  echo "Cloning ${component}"
  git clone git@github.com:onosproject/${component}.git --quiet
done

# build-tools
cd ./build-tools
make images
cd ..

# onos-lib-go
cd ./onos-lib-go
make
cd ..

# helmit
cd ./helmit
make
cd ..

# onos-topo
cd ./onos-topo
make images
cd ..

# onos-ric-sdk-go
cd ./onos-ric-sdk-go
make test
cd ..

# onos-e2sub
cd ./onos-e2sub
make images
cd ..

# onos-e2t
cd ./onos-e2t
make images
cd ..

# ran-simulator
cd ./ran-simulator
make images
cd ..

# config-models
cd ./config-models
make build
cd ..

# onos-config
cd ./onos-config
make images
cd ..

# onos-cli
cd ./onos-cli
make images
cd ..

# onos-docs
cd ./onos-docs
make images
cd ..

# onos-gui
cd ./onos-gui
docker container run --rm -v $(pwd):/opt -w /opt teracy/angular-cli make deps build
cd ..

# gnxi-simulators
cd ./gnxi-simulators
make images
cd ..

sudo chown -R jenkins .
